---
pagination:
    data: contentful-blog
    size: 1
    alias: post
    addAllPagesToCollections: true
permalink: "/blog/{{ post.slug | slug }}/"
tags: "blogPost"
layout: layout.liquid

renderData:
    title: "{{ post.title }}"

---

<div class="columns is-multiline">
    <p>{{post.richContent | renderRichTextAsHtml | safe }}</p>
</div>
